{
	"name": "monster-hotel",
	"version": "0.1.0",
	"private": true,
	"license": "AGPL-3.0-or-later",
	"type": "module",
	"scripts": {
		"phaser:dev": "cd phaser && yarn dev",
		"phaser:build": "cd phaser && yarn build",
		"phaser:test": "cd phaser && yarn vitest",
